<h1>Posts Page</h1>

<%= link_to "New post" , new_post_path %>

<% @posts.each do |post|%>
    <p>[<%= post.id %>]<%= post.title%></p>
    <p><%= post.body%></p>
    <% if post.image.attached? %>
        <p><%= link_to image_tag(post.image , style: 'width: 20%') , post %></p>
    <% end %>
    <%= link_to "Show" , post%>
    <%= link_to "Edit post" , edit_post_path(post) %>
    <%= link_to "Delete" , delete_post_path(post)%>
<% end%>