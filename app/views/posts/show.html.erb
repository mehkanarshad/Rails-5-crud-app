<h1>Showing post</h1>
<h3><%= @post.title%></h3>
<p><%= @post.body%></p>
<p><%= @post.user.email %></p>
<% if @post.image.attached? %>
    <p><%= image_tag(@post.thumbnail) %></p>
<% end %>
<% if @post.file.attached? %>
    <p><%= link_to 'Download' , @post.file , download: '' %>
<% end %>

<% if @post.clip.attached? %>
    <p><%= video_tag(url_for(@post.clip), controls: true, size: "320x240") %></p>
<% end %>


<%= link_to "All Posts", posts_path%>
<%= link_to "Edit post" , edit_post_path(@post) %>
<%= link_to "Delete", delete_post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
